<p id="notice"><%= notice %></p>

<h1>Gameboards</h1>

<table>
  <thead>
    <tr>
      <th>Expirience</th>
      <th>Karma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gameboards.each do |gameboard| %>
      <tr>
        <td><%= gameboard.expirience %></td>
        <td><%= gameboard.karma %></td>
        <td><%= link_to 'Show', gameboard %></td>
        <td><%= link_to 'Edit', edit_gameboard_path(gameboard) %></td>
        <td><%= link_to 'Destroy', gameboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gameboard', new_gameboard_path %>
